    "vite": "^3.2.4",
    "wait-on": "latest"
  },
  "dependencies": {
    "@types/node": "^18.11.9",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
